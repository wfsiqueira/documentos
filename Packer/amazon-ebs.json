{
    "variables": {
        "region": "us-east-1",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "claro-eventstore-template",
        "ami_filter": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*"
    },
    "sensitive-variables": ["aws_access_key", "aws_secret_key"],
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `region`}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "{{user `ami_filter`}}",,
                    "root-device-type": "ebs"
                },
                "owners": ["099720109477"],
                "most_recent": true
            },
            "instance_type": "{{user `instance_type`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "{{user `ami_name`}}-{{timestamp}}",
            "subnet_filter": {
                "filters": {
                    "state": "available"
                },
                "most_free": true,
                "random": true
            }
        }
    ],
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "../ansible/eventstore/provision.yml",
            "user": "{{user `ssh_username`}}",
            "extra_arguments": [
                "--extra-vars",
                "ansible_python_interpreter=/usr/bin/python3"
            ],
            "ansible_env_vars": [
                "ANSIBLE_HOST_KEY_CHECKING=False"
            ]
        }
    ]
}